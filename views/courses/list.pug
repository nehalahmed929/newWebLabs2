extends ../layout

block content
    .row
        .col-md-8
            h1 Courses List
        .col-md-4
            a(href="courses/add" class="btn btn-primary float-right") New Course
    
    table.table
        thead
            th Course Name
            th Course Id
            th Course Duration(Hrs)
            th Course Fee(USD)
            th Actions
        tbody
            each course in courses
                tr
                    td=course.crName
                    td=course.crId
                    td=course.crDuration
                    td=course.crFee
                    td  
                        a(href="/courses/edit/"+course._id, class="btn btn-info") Edit
                        a(href="/courses/delete/"+course._id, class="btn btn-danger mr-2") Delete
                        